<script>
    function addSkill() {
        var field = document.createElement("input");
        var att = document.createAttribute("class");
        att.value = "form-control";
        field.setAttributeNode(att);
        var btt = document.createAttribute("plaeholder");
        btt.value = "Skill";
        field.setAttributeNode(btt);
        var ctt = document.createAttribute("name");
        ctt.value = "skills";
        field.setAttributeNode(ctt);
        document.getElementById("Skill").appendChild(field);
    }
