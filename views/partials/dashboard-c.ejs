<!-- public/partials/signup-c.ejs -->
<div class="container">
    <div class="card card-container">
        <div class="row">
            <div class="col-sm-2">
                <img id="profile-img" align="left" class="profile-img-card"
                    src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            </div>
            <div class="col-sm-10">
                <h3><%= user.fName %> <%= user.lName %></h3>
                <ul type="none">
                    <li>
                        <h4><%= user.username %></h4>
                    </li>
                    <li>
                        <h4><%= user.email %></h4>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>